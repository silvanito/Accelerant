
$('<%= escape_javascript("report_comments_#{@comment_id}")%>').up().setStyle({opacity: 1});
$('container').setStyle({opacity: 1});
<%unless @comment_id.blank?%>
  $('<%= escape_javascript("report_comments_#{@comment_id}")%>').up().up().up().up().up().setStyle({opacity: 1});
  $('<%= escape_javascript("report_comments_#{@comment_id}")%>').update("<%= escape_javascript(render :partial=>'index', :locals=>{:comment_id => @comment_id, :subcomment_id => @subcomment_id}) %>");
<%else%>
  $('<%= escape_javascript("report_subcomments_#{@subcomment_id}")%>').up().up().up().up().up().setStyle({opacity: 1});
  $('<%= escape_javascript("report_subcomments_#{@subcomment_id}")%>').update("<%= escape_javascript(render :partial=>'index', :locals=>{:comment_id => @comment_id, :subcomment_id => @subcomment_id}) %>");
<%end%>
  parent.document.getElementById('notice').style.display='none';

