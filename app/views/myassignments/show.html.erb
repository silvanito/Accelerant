
<h1 class="lower">Your Assignments:</h1>
<p>&nbsp;</p>
<div id="myassygnments">
<% for assignment in @your_assignments %>
	<% if assignment %>
	<% assignment_detail = Project.find(:last, :conditions => {:id => assignment.project_id, :active => true}, :limit => 1) %>
  <% discussion = Discussion.find(:first, :conditions => {:project_id => assignment.project_id }, :order => 'id DESC')%>
	<% if !assignment_detail %>
	<% else %>
	<%= link_to assignment_detail.title, {:controller => 'discussion', :action => 'show', :id => discussion.id,:project_id => assignment.project_id }%><br/>
	<% end %>
	<% end %>
 
<% end %>
</div>
<% if session[:notice] %>
  <div id="notice", class="notice">
    <%= session[:notice] %>
  </div>
  <script type="text/javascript">
     new Effect.Opacity('myassygnments', {duration:22 , from:0, to:1.0});
    setTimeout("new Effect.Fade('notice');", 15000);
  </script>
<% end %>
