<% form_for [@flex_module, @module_image], :html => { :multipart => true } do |f|%>
  <%= f.label :name, 'Select from your computer the images to include on this module. You have limit of 20 images.'%>
  <br/>
  <%= f.error_messages :header_message => "Invalid photo!",
  :message => "You'll need to fix the following fields:",
  :header_tag => :h3 %>
  <p>
    <%= f.label :media, "Photo: "%><br/>
    <%= f.file_field :media%>
  </p>
  <p>
    <%= hidden_field(:module_image, :flex_module_id, :value => @flex_module.id)%>
  </p>
  <p>
    <%= f.submit '+Add Image'%>
  </p>
<%end%>
