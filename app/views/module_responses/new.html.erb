<%javascript_tag do -%>
  var params = {};
  params.allowfullscreen = "true";
  swfobject.embedSWF("/heatMap/blognogModules.swf", "blog_modules", "600", "400", "6.0.65", "expressInstall.swf","", params);
<%end-%>
<div id="rightColumn">
  <div class="blog_modules_container" id="blog_modules">
    <h1>Alternative content</h1>
  	  <p><a href="http://www.adobe.com/go/getflashplayer"><img src="http://www.adobe.com/images/shared/download_buttons/get_flash_player.gif" alt="Get Adobe Flash player" /></a></p>
  </div>
  <div style="padding-top:15px;clear:both;" id="responder_form" >
    <% form_for [@flex_module, @module_response] do |f|%>

      <%= label(:comment, :commment, "Plese entry your comment")%>

      <%= text_area(:comment, :comment, :size => "60 x 10", :class => 'rich_text_editor')%><br/>
    
      <%= f.hidden_field(:flex_module_id, :value => @flex_module.id)%>
      <%= f.hidden_field(:user_id, :value => self.current_user.id)%>  
      <%= f.submit 'Comment', :disabled => true%>
    <%end%>
  </div>

</div>
<% content_for :scripts do -%>
  <%= javascript_include_tag "module_response"%>
<%end%>
