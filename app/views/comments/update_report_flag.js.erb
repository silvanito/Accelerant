<%if @comment.for_report == 1%>
  <%@replies.each do |reply|%>
    $('<%= escape_javascript("label_#{reply.id}")%>').show()
    $('<%= escape_javascript("replies_#{reply.id}")%>').show()
  <%end%>
  $('<%= escape_javascript("report_comments_#{@comment.id}")%>').update('<%= escape_javascript(render (:partial=>"report_comments/#{@report_comment}", :locals=>{:comment_id => @comment_id, :owner => @owner}) ) %>')
<%else%>
  <%@replies.each do |reply|%>
    $('<%= escape_javascript("label_#{reply.id}")%>').hide()
    $('<%= escape_javascript("replies_#{reply.id}")%>').hide()
  <%end%>
  $('<%= escape_javascript("report_comments_#{@comment.id}")%>').update(" ")
<%end%>
